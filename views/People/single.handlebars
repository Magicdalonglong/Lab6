<article class="people">
  <h1>Name: {{ people.name }}</h1>
  <h3>Id: {{ people.id }}</h3>

  {{#if people.events.length}}
    <h3>Attending Events: </h3>
    <ul>
      {{#each people.events}}
        <li><a href="/events/{{this.id}}">{{this.title}}</a></li>
      {{/each}}
    </ul>
  {{/if}}
</article>
